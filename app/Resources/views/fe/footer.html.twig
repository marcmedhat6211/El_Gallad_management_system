<footer class="pt-13 pb-4 footer bg-color-2">
    <div class="container container-xxl">
        <div class="row">
            <div class="col-md-6 col-lg-3 mb-6 mb-md-0">
                <h3 class="fs-14 mb-3 text-uppercase letter-spacing-05 footer-title">{% trans %}Categories{% endtrans %}</h3>
                <ul class="list-unstyled mb-0">
                    {% for category in categories %}
                        <li class="py-0"><a href="{{ path('fe_filter_category', {"slug": category.seo.slug}) }}"
                                            class="text-gray lh-175 footer-navigation">{{ category.title }}</a></li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-6 col-lg-3 mb-6 mb-md-0">
                <h3 class="fs-14 mb-3 text-uppercase letter-spacing-05 footer-title">{% trans %}about{% endtrans %}</h3>
                <ul class="list-unstyled mb-0">
                    <li class="py-0"><a href="{{ path('fe_about') }}"
                                        class="text-gray lh-175 footer-navigation">{% trans %}About Us{% endtrans %}</a>
                    </li>
                    <li class="py-0"><a href="{{ path('fe_filter_product') }}"
                                        class="text-gray lh-175 footer-navigation">{% trans %}Products{% endtrans %}</a>
                    </li>
                    <li class="py-0"><a href="{{ path('fe_service') }}"
                                        class="text-gray lh-175 footer-navigation">{% trans %}Services{% endtrans %}</a>
                    </li>
                    <li class="py-0"><a href="{{ path('fe_blogger') }}"
                                        class="text-gray lh-175 footer-navigation">{% trans %}Blogs{% endtrans %}</a>
                    </li>
                    <li class="py-0"><a href="{{ path('fe_contact') }}"
                                        class="text-gray lh-175 footer-navigation">{% trans %}Contact Us{% endtrans %}</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-6 col-lg-3 mb-6 mb-md-0">
                <h3 class="fs-14 mb-3 text-uppercase letter-spacing-05 footer-title">{% trans %}follow us{% endtrans %}</h3>
                <ul class="list-unstyled mb-0">
                    {% if getDCA(20) %}
                        <li class="py-0"><a href="{{ getDCA(20) }}"
                                            class="text-gray lh-175 footer-navigation">{% trans %}Facebook{% endtrans %}</a>
                            {{ editDCA(20) }}
                        </li>
                    {% endif %}
                    {% if getDCA(19) %}
                        <li class="py-0"><a href="{{ getDCA(19) }}"
                                            class="text-gray lh-175 footer-navigation">{% trans %}Pinterest{% endtrans %}</a>
                            {{ editDCA(19) }}
                        </li>
                    {% endif %}
                    {% if getDCA(21) %}
                        <li class="py-0"><a href="{{ getDCA(21) }}"
                                            class="text-gray lh-175 footer-navigation">{% trans %}Instagram{% endtrans %}</a>
                            {{ editDCA(21) }}
                        </li>
                    {% endif %}
                    {% if getDCA(22) %}
                        <li class="py-0"><a href="{{ getDCA(22) }}"
                                            class="text-gray lh-175 footer-navigation">{% trans %}Twitter{% endtrans %}</a>
                            {{ editDCA(22) }}
                        </li>
                    {% endif %}
                </ul>
            </div>
            <div class="col-md-6 col-lg-3 mb-6 mb-md-0">
                <h3 class="fs-14 mb-3 text-uppercase letter-spacing-05 footer-title">{% trans %}newsletter{% endtrans %}</h3>
                <form id="newsletter_form" method="post" data-link="{{ path('fe_subscribe') }}">
                    <div class="input-group position-relative">
                        <input type="text" name="email" class="form-control border-top-0 border-left-0 border-right-0 px-0 border-2x bg-transparent footer-newsletter-input" placeholder="{% trans %}Email Address{% endtrans %}">
                        <div class="input-group-append fs-14 position-absolute pos-fixed-right-center z-index-2">
                            <button type="submit" class="bg-transparent border-0 outline-none">
                                <i class="far fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="mt-0 mt-md-7 row d-flex justify-content-between align-items-end">
            <p class="col-md-auto mb-4 mb-md-0 text-gray lh-2 footer-copyright">
                Â© 2021 Seats. {% trans %}All rights reserved. Developed by{% endtrans %} <a class="our-company-name"
                                                                                            href="https://perfectneeds.com/">{% trans %}Perfectneeds{% endtrans %}</a>
            </p>
            <p class="col-md-auto mb-0 mb-md-0 text-gray lh-1 guaranteed-by-text">
                <span>{% trans %}Guaranteed by{% endtrans %}</span>
                <a href="http://www.elgallad.com/" class="company-name">
                    <i class="convert-svg" data-src="{{ asset('images/gf.svg') }}"></i>
                    <span>{% trans %}Gallad Furniture{% endtrans %}</span>
                </a>
            </p>
        </div>
    </div>
</footer>