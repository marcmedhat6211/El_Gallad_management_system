{% extends 'AdminTemplateBundle::base.html.twig' %}
{% set page_title %}{{ entity.username }} Edit{% endset %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body -%}
    <div class="the-box col-md-8">
        <address>
            Name : <strong>{{ entity.username }}</strong><br>
            Email : {{ entity.email }}<br>
            mobile : {{ entity.phone }}<br>
        </address>
    </div>
    <div class="col-md-2">
        <a href="{{ path('user_login_as_user', { 'id': entity.id }) }}" class="btn btn-primary"><i
                    class="fa fa-sign-in"></i> Login as {{ entity.fullname }}</a>
    </div>
    

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}